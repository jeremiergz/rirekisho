{
  "name": "rirekisho",
  "version": "20.08.43",
  "private": true,
  "description": "Yet Another Resume Website. This time it's mine though.",
  "keywords": [
    "cv",
    "next",
    "react",
    "resume",
    "rirekisho",
    "styled-components",
    "typescript"
  ],
  "homepage": "https://cv.jeremierodriguez.com",
  "bugs": {
    "url": "https://github.com/jeremiergz/rirekisho/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeremiergz/rirekisho.git"
  },
  "license": "Apache-2.0",
  "author": "Jeremie Rodriguez <contact@jeremierodriguez.com> (https://github.com/jeremiergz)",
  "files": [
    ".next/",
    "public/",
    "package-lock.json"
  ],
  "scripts": {
    "build": "run-s clean build:compile build:export",
    "build:compile": "next build",
    "build:export": "next export",
    "clean": "rimraf .next coverage dist out",
    "deploy": "gh-pages --dist out --repo https://${GH_TOKEN}@github.com/jeremiergz/rirekisho.git",
    "lint": "run-p lint:eslint lint:tsc",
    "lint:eslint": "eslint --ext ts,tsx src",
    "lint:tsc": "tsc --noEmit",
    "prerelease": "run-s build export lint test",
    "release": "node release.js",
    "start": "next start",
    "start:debug": "NODE_OPTIONS=\"--inspect --max_old_space_size=4096\" next dev",
    "start:w": "NODE_OPTIONS=--max_old_space_size=4096 next dev",
    "test": "jest",
    "test:cc": "jest --clearCache",
    "version": "node --print process.env.npm_package_version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint",
      "prettier --write",
      "bash -c tsc --noEmit"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*/*.{ts,tsx}",
      "!**/*/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".cache"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "modulePaths": [
      "src"
    ],
    "setupFiles": [
      "<rootDir>/loadershim.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      ".cache"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/jest-preprocess.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@kobionic/react-compose": "1.0.2",
    "lodash.throttle": "4.1.1",
    "next": "10.0.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.1",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@kobionic/eslint-config-typescript": "^3.1.1",
    "@kobionic/eslint-config-typescript-react": "^1.0.7",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/jest": "^26.0.20",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.20.0",
    "eslint-plugin-react": "^7.22.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "engines": {
    "node": ">=14"
  }
}
